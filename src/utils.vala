namespace Peek {

  public class Utils {
    public static string create_temp_file (string extension) throws FileError {
      string file_name;
      var fd = FileUtils.open_tmp ("peekXXXXXX." + extension, out file_name);
      FileUtils.close (fd);
      return file_name;
    }
  }

}
